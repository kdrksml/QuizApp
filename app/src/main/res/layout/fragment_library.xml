<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_light_blue"
    tools:context=".LibraryFragment">

    <TableLayout
        android:id="@+id/scoreTable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Header Row -->
        <TableRow
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kategori"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:textSize="24sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kullanıcı Adı"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:textSize="24sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="En Yüksek Puan"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:textSize="24sp" />

        </TableRow>

        <!-- Science Row -->
        <TableRow
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bilim"
                android:textColor="@color/text_secondary_color"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/scienceUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_secondary_color"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/scienceHighestScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_secondary_color"
                android:textSize="24sp" />

        </TableRow>

        <!-- Literature Row -->
        <TableRow
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edebiyat"
                android:textColor="@color/text_secondary_color"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/literatureUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_secondary_color"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/literatureHighestScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_secondary_color"
                android:textSize="24sp" />

        </TableRow>

        <!-- Art Row -->
        <TableRow
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sanat"
                android:textColor="@color/text_secondary_color"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/artUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_secondary_color"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/artHighestScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_secondary_color"
                android:textSize="24sp" />

        </TableRow>

        <!-- Movie Row -->
        <TableRow
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Film"
                android:textColor="@color/text_secondary_color"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/movieUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_secondary_color"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/movieHighestScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_secondary_color"
                android:textSize="24sp" />

        </TableRow>

        <!-- Geography Row -->
        <TableRow
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Coğrafya"
                android:textColor="@color/text_secondary_color"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/geographyUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_secondary_color"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/geographyHighestScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_secondary_color"
                android:textSize="24sp" />

        </TableRow>

        <!-- History Row -->
        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tarih"
                android:textColor="@color/text_secondary_color"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/historyUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_secondary_color"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/historyHighestScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_secondary_color"
                android:textSize="24sp" />

        </TableRow>

    </TableLayout>

</FrameLayout>


