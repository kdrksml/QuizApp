<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarLayout"
        app:statusBarForeground="@color/background"
        android:background="@color/teal_700"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:elevation="0dp"
            android:background="@color/purple_200"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center">

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KATEGORİLER"
                android:gravity="center"
                android:textSize="28dp"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Geographycard"
                    app:cardBackgroundColor="@color/card_background"
                    app:strokeWidth="0dp"
                    android:layout_margin="30dp"
                    app:cardCornerRadius="25dp"
                    android:layout_weight="1"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/gradient_green">

                        <ImageView
                            android:src="@drawable/geography"
                            android:layout_width="64dp"
                            android:layout_height="64dp"/>

                        <TextView
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:text="Coğrafya"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="2" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/HistoryCard"
                    app:cardBackgroundColor="@color/card_background"
                    app:strokeWidth="0dp"
                    android:layout_margin="30dp"
                    app:cardCornerRadius="25dp"
                    android:layout_weight="1"
                    android:layout_width="64dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/gradient_orange">

                        <ImageView
                            android:src="@drawable/history"
                            android:layout_width="64dp"
                            android:layout_height="64dp"/>

                        <TextView
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:text="Tarih"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="2" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/ArtCard"
                    app:cardBackgroundColor="@color/card_background"
                    app:strokeWidth="0dp"
                    android:layout_margin="30dp"
                    app:cardCornerRadius="25dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/gradient_blue">

                        <ImageView
                            android:src="@drawable/art"
                            android:layout_width="64dp"
                            android:layout_height="64dp" />

                        <TextView
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:text="Sanat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="2" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/ScienceCard"
                    app:cardBackgroundColor="@color/card_background"
                    app:strokeWidth="0dp"
                    android:layout_margin="30dp"
                    app:cardCornerRadius="25dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/gradient_purple">

                        <ImageView
                            android:src="@drawable/science"
                            android:layout_width="64dp"
                            android:layout_height="64dp"/>

                        <TextView
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:text="Bilim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="2" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/LiteratureCard"
                    app:cardBackgroundColor="@color/card_background"
                    app:strokeWidth="0dp"
                    android:layout_margin="30dp"
                    app:cardCornerRadius="25dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/gradient_red">

                        <ImageView
                            android:src="@drawable/literature"
                            android:layout_width="64dp"
                            android:layout_height="64dp"/>

                        <TextView
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:text="Edebiyat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="2" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/MovieCard"
                    app:cardBackgroundColor="@color/card_background"
                    app:strokeWidth="0dp"
                    android:layout_margin="30dp"
                    app:cardCornerRadius="25dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/gradient_yellow">

                        <ImageView
                            android:src="@drawable/movie"
                            android:layout_width="64dp"
                            android:layout_height="64dp"/>


                        <TextView
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:text="Filmler"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="2" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
